QToolBar#toolbarCreate {
    spacing: 0.25em; /* spacing between items in the tool bar */
}

/*
    font: bold;
    background-color : #A7ADBA;
        border-style: solid;
    border-width: 1px;
    border-radius: 6px;
    border-color: rgb(126, 128, 133);
    background-color : rgb(208, 214, 224);
    padding: 0.25em 1em 0.25em 0.25em;
*/
QToolBar#toolbarCreate QToolButton {
    padding: 0.1em 1em 0.1em 0.25em; /* make way for the popup button */
    border: 2px solid #8f8f91;
    border-radius: 6px;
    border-width: 0.5px;
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                      stop: 0 #f6f7fa, stop: 1 #dadbde);
    icon-size: 500px; /* maximum icon size */
    qproperty-iconSize: 500px;
}

QToolBar#toolbarCreate QToolButton:pressed {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                      stop: 0 #dadbde, stop: 1 #f6f7fa);
}


/* the subcontrols below are used only in the MenuButtonPopup mode */
QToolBar#toolbarCreate  QToolButton::menu-button {
    border: 2px solid gray;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    /* 16px width + 4px for border = 20px allocated above */
    width: 16px;
}


QScrollBar:vertical {
    border: 0.5px solid #727272;
    border-radius: 4px;
    background:white;
    width:10px;
    margin: 0px 0px 0px 0px;
}
QScrollBar:horizontal {
    border: 0.5px solid #727272;
    border-radius: 4px;
    background:white;
    height:10px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop: 0.0 rgb(173, 194, 179),
                                stop: 0.5 #148CD2,
                                stop: 1.0 rgb(106, 106, 110));
    min-height: 0px;
}
QScrollBar::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop: 0.0 rgb(173, 194, 179),
                                stop: 0.5 #148CD2,
                                stop: 1.0 rgb(106, 106, 110));
    min-width: 0px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #148CD2;
    border: 1px solid #148CD2;
    border-radius: 4px;
    min-width: 15px;
  }
QScrollBar::handle:vertical:hover {
    background-color: #148CD2;
    border: 1px solid #148CD2;
    border-radius: 4px;
    min-height: 15px;
  }



 /*******************************************************************************/
 QDockWidget {
    border: 1px solid lightgray;
    titlebar-close-icon: url(:/cancel);
    titlebar-normal-icon: url(:/unlock);
}

QDockWidget::title {
    text-align: left; /* align the text to the left */
  /* background: lightgray; */
    padding-left: 5px;
}

QDockWidget::close-button, QDockWidget::float-button {
    border: 0px solid transparent;
    /*background: darkgray;*/
    padding: 1px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover {
    background: gray;
}

QDockWidget::close-button:pressed, QDockWidget::float-button:pressed {
    padding: 1px -1px -1px 1px;
}

